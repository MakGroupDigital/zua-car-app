
/**
 * Règles de sécurité Firestore pour Zua-Car
 * Permet aux utilisateurs authentifiés de publier leurs propres annonces
 * 
 * Collections:
 * - /users/{userId}: Profils utilisateurs
 * - /vehicles/{vehicleId}: Véhicules à vendre
 * - /parts/{partId}: Pièces détachées
 * - /rentals/{rentalId}: Véhicules en location
 */
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions Helper ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isListingOwner(resource) {
      return isSignedIn() && resource.data.userId == request.auth.uid;
    }

    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    // --- Collection Utilisateurs ---
    match /users/{userId} {
      // Lecture publique pour afficher le nom du vendeur sur les annonces
      allow get: if true;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update, delete: if isOwner(userId);
      allow list: if false; // Empêche l'énumération des utilisateurs
    }

    // --- Collection Véhicules à Vendre ---
    match /vehicles/{vehicleId} {
      // Lecture publique
      allow get, list: if true;
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && hasRequiredFields(['userId', 'title', 'price', 'createdAt']);
      
      // Modification/Suppression par le propriétaire uniquement
      allow update, delete: if isListingOwner(resource);
    }

    // --- Collection Pièces Détachées ---
    match /parts/{partId} {
      // Lecture publique
      allow get, list: if true;
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && hasRequiredFields(['userId', 'title', 'price', 'createdAt']);
      
      // Modification/Suppression par le propriétaire uniquement
      allow update, delete: if isListingOwner(resource);
    }

    // --- Collection Locations ---
    match /rentals/{rentalId} {
      // Lecture publique
      allow get, list: if true;
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && hasRequiredFields(['userId', 'title', 'pricePerDay', 'createdAt']);
      
      // Modification/Suppression par le propriétaire uniquement
      allow update, delete: if isListingOwner(resource);
    }

    // --- Collection Favoris (optionnel) ---
    match /favorites/{userId} {
      allow get, list: if isOwner(userId);
      allow create, update, delete: if isOwner(userId);
    }

    // --- Collection Demandes d'Assurance ---
    match /insuranceRequests/{requestId} {
      // Création autorisée pour tous (même non connectés)
      allow create: if true;
      
      // Lecture uniquement par le propriétaire de la demande
      allow get, list: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Pas de modification ni suppression
      allow update, delete: if false;
    }

    // --- Collection Demandes d'Auto-école ---
    match /drivingSchoolRequests/{requestId} {
      // Création autorisée pour tous (même non connectés)
      allow create: if true;
      
      // Lecture uniquement par le propriétaire de la demande
      allow get, list: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Pas de modification ni suppression
      allow update, delete: if false;
    }

    // --- Collection Conversations ---
    match /conversations/{conversationId} {
      // Lecture autorisée si l'utilisateur est participant
      allow get, list: if isSignedIn() 
        && request.auth.uid in resource.data.participantIds;
      
      // Création autorisée si l'utilisateur est participant
      allow create: if isSignedIn() 
        && request.auth.uid in request.resource.data.participantIds;
      
      // Mise à jour autorisée si l'utilisateur est participant
      allow update: if isSignedIn() 
        && request.auth.uid in resource.data.participantIds;
      
      // Suppression non autorisée (ou seulement par les participants)
      allow delete: if false;

      // Sous-collection Messages
      match /messages/{messageId} {
        // Lecture autorisée si l'utilisateur est participant de la conversation parente
        allow read: if isSignedIn() 
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        
        // Création autorisée si l'utilisateur est participant et est l'expéditeur
        allow create: if isSignedIn() 
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds
          && request.resource.data.senderId == request.auth.uid;
        
        // Pas de modification ni suppression des messages
        allow update, delete: if false;
      }
    }

    // --- Collection Notifications ---
    match /notifications/{notificationId} {
      // Lecture uniquement par le propriétaire de la notification
      allow get, list: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Création autorisée pour tous (système et utilisateurs)
      allow create: if true;
      
      // Mise à jour uniquement par le propriétaire (marquer comme lu)
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Suppression uniquement par le propriétaire
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // --- Collection Ratings ---
    match /ratings/{ratingId} {
      // Lecture publique pour tous
      allow read: if true;
      
      // Création uniquement par les utilisateurs connectés
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5;
      
      // Mise à jour uniquement par le propriétaire de la note
      allow update: if isSignedIn() 
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5;
      
      // Suppression uniquement par le propriétaire
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // --- Collection Security Vehicles (Véhicules avec traceur GPS) ---
    match /securityVehicles/{vehicleId} {
      // Lecture d'un document spécifique uniquement par le propriétaire
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Liste : permet la lecture si l'utilisateur est connecté
      // Le code filtre par userId dans la requête avec where('userId', '==', user.uid)
      allow list: if isSignedIn();
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && hasRequiredFields(['userId', 'make', 'model', 'trackerNumber', 'licensePlate', 'createdAt']);
      
      // Mise à jour uniquement par le propriétaire
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Suppression uniquement par le propriétaire
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // --- Collection Security Payments (Paiements GPS) ---
    match /securityPayments/{paymentId} {
      // Lecture uniquement par le propriétaire
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Liste : permet la lecture si l'utilisateur est connecté
      allow list: if isSignedIn();
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid;
      
      // Mise à jour uniquement par le propriétaire ou le système (via API)
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Pas de suppression
      allow delete: if false;
    }

    // --- Collection Advisors (Conseillers Automobiles) ---
    match /advisors/{advisorId} {
      // Lecture publique pour tous
      allow get, list: if true;
      
      // Création par utilisateurs authentifiés (pour les conseillers qui s'inscrivent)
      allow create: if isSignedIn();
      
      // Mise à jour uniquement par le propriétaire (le conseiller lui-même)
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Suppression uniquement par le propriétaire
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // --- Collection Garages ---
    match /garages/{garageId} {
      // Lecture publique pour tous
      allow get, list: if true;
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn();
      
      // Mise à jour uniquement par le propriétaire
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Suppression uniquement par le propriétaire
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // --- Collection Stations (Stations-service) ---
    match /stations/{stationId} {
      // Lecture publique pour tous
      allow get, list: if true;
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn();
      
      // Mise à jour uniquement par le propriétaire
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Suppression uniquement par le propriétaire
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
