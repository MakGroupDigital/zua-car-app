
/**
 * Règles de sécurité Firestore pour Zua-Car
 * Permet aux utilisateurs authentifiés de publier leurs propres annonces
 * 
 * Collections:
 * - /users/{userId}: Profils utilisateurs
 * - /vehicles/{vehicleId}: Véhicules à vendre
 * - /parts/{partId}: Pièces détachées
 * - /rentals/{rentalId}: Véhicules en location
 */
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions Helper ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isListingOwner(resource) {
      return isSignedIn() && resource.data.userId == request.auth.uid;
    }

    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    // --- Collection Utilisateurs ---
    match /users/{userId} {
      // Lecture publique pour afficher le nom du vendeur sur les annonces
      allow get: if true;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update, delete: if isOwner(userId);
      allow list: if false; // Empêche l'énumération des utilisateurs
    }

    // --- Collection Véhicules à Vendre ---
    match /vehicles/{vehicleId} {
      // Lecture publique
      allow get, list: if true;
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && hasRequiredFields(['userId', 'title', 'price', 'createdAt']);
      
      // Modification/Suppression par le propriétaire uniquement
      allow update, delete: if isListingOwner(resource);
    }

    // --- Collection Pièces Détachées ---
    match /parts/{partId} {
      // Lecture publique
      allow get, list: if true;
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && hasRequiredFields(['userId', 'title', 'price', 'createdAt']);
      
      // Modification/Suppression par le propriétaire uniquement
      allow update, delete: if isListingOwner(resource);
    }

    // --- Collection Locations ---
    match /rentals/{rentalId} {
      // Lecture publique
      allow get, list: if true;
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && hasRequiredFields(['userId', 'title', 'pricePerDay', 'createdAt']);
      
      // Modification/Suppression par le propriétaire uniquement
      allow update, delete: if isListingOwner(resource);
    }

    // --- Collection Favoris (optionnel) ---
    match /favorites/{userId} {
      allow get, list: if isOwner(userId);
      allow create, update, delete: if isOwner(userId);
    }

    // --- Collection Conversations ---
    match /conversations/{conversationId} {
      // Lecture autorisée si l'utilisateur est participant
      allow get, list: if isSignedIn() 
        && request.auth.uid in resource.data.participantIds;
      
      // Création autorisée si l'utilisateur est participant
      allow create: if isSignedIn() 
        && request.auth.uid in request.resource.data.participantIds;
      
      // Mise à jour autorisée si l'utilisateur est participant
      allow update: if isSignedIn() 
        && request.auth.uid in resource.data.participantIds;
      
      // Suppression non autorisée (ou seulement par les participants)
      allow delete: if false;

      // Sous-collection Messages
      match /messages/{messageId} {
        // Lecture autorisée si l'utilisateur est participant de la conversation parente
        allow read: if isSignedIn() 
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        
        // Création autorisée si l'utilisateur est participant et est l'expéditeur
        allow create: if isSignedIn() 
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds
          && request.resource.data.senderId == request.auth.uid;
        
        // Pas de modification ni suppression des messages
        allow update, delete: if false;
      }
    }
  }
}
