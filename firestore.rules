
/**
 * Règles de sécurité Firestore pour Zua-Car
 * Permet aux utilisateurs authentifiés de publier leurs propres annonces
 * 
 * Collections:
 * - /users/{userId}: Profils utilisateurs
 * - /vehicles/{vehicleId}: Véhicules à vendre
 * - /parts/{partId}: Pièces détachées
 * - /rentals/{rentalId}: Véhicules en location
 */
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions Helper ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isListingOwner(resource) {
      return isSignedIn() && resource.data.userId == request.auth.uid;
    }

    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    // --- Collection Utilisateurs ---
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update, delete: if isOwner(userId);
      allow list: if false; // Empêche l'énumération des utilisateurs
    }

    // --- Collection Véhicules à Vendre ---
    match /vehicles/{vehicleId} {
      // Lecture publique
      allow get, list: if true;
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && hasRequiredFields(['userId', 'title', 'price', 'createdAt']);
      
      // Modification/Suppression par le propriétaire uniquement
      allow update, delete: if isListingOwner(resource);
    }

    // --- Collection Pièces Détachées ---
    match /parts/{partId} {
      // Lecture publique
      allow get, list: if true;
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && hasRequiredFields(['userId', 'title', 'price', 'createdAt']);
      
      // Modification/Suppression par le propriétaire uniquement
      allow update, delete: if isListingOwner(resource);
    }

    // --- Collection Locations ---
    match /rentals/{rentalId} {
      // Lecture publique
      allow get, list: if true;
      
      // Création par utilisateurs authentifiés
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && hasRequiredFields(['userId', 'title', 'pricePerDay', 'createdAt']);
      
      // Modification/Suppression par le propriétaire uniquement
      allow update, delete: if isListingOwner(resource);
    }

    // --- Collection Favoris (optionnel) ---
    match /favorites/{userId} {
      allow get, list: if isOwner(userId);
      allow create, update, delete: if isOwner(userId);
    }
  }
}
