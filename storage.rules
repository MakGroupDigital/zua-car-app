rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images des véhicules - lecture publique, écriture pour utilisateurs connectés
    match /vehicles/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Images des pièces détachées
    match /parts/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Images des locations
    match /rentals/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Photos de profil utilisateurs
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

